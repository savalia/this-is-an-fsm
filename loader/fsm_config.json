{
    "initial_states": ["Idle", "Processing"], 
    "default_initial": "Idle",                 
    "states": [
        {
            "name": "Idle",
            "on_enter": "System is now idle.",
            "on_exit": "Leaving idle state."
        },
        {
            "name": "Starting",
            "on_enter": "System is starting up.",
            "on_exit": "Startup complete."
        },
        {
            "name": "Waiting",
            "on_enter": "System is waiting for input.",
            "on_exit": "Leaving waiting state."
        },
        {
            "name": "Processing",
            "on_enter": "System is processing data.",
            "on_exit": "Processing complete."
        },
		{
            "name": "Monitoring",
            "on_enter": "System is monitoring data.",
            "on_exit": "Monitoring complete."
        },
        {
            "name": "Stopping",
            "on_enter": "System is shutting down.",
            "on_exit": "Shutdown complete."
        },
        {
            "name": "Unknown",
            "on_enter": "Entered unknown state.",
            "on_exit": "Exiting unknown state."
        }
    ],
    "transitions": {
        "Idle": {"start": "Starting"},
        "Starting": {"ready": "Waiting"},
        "Waiting": {"process": "Processing"},
        "Processing": {"monitor": "Monitoring"},
		"Monitoring": {"stop": "Stopping"},
        "Stopping": {"reset": "Idle"},
        "Unknown": {"reset": "Idle"}
    }
}